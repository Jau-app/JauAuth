# JauAuth Environment Variables Example
# Copy this file to .env and update with your values

# JWT Secret for authentication (generate with: openssl rand -base64 32)
JAUAUTH_JWT_SECRET=your-secret-key-here

# Database configuration
JAUAUTH_DATABASE_URL=sqlite:jauauth.db
DATABASE_URL=sqlite:jauauth.db

# Server configuration
JAUAUTH_PORT=7447
RUST_BACKEND_URL=http://localhost:7447

# Logging
RUST_LOG=info
LOG_LEVEL=info

# API Configuration
API_TIMEOUT=30000

# Optional: External services
# SENTRY_DSN=https://your-sentry-dsn
# PROMETHEUS_ENDPOINT=http://localhost:9090